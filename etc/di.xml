<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <!-- CRUD model for review extension -->
    <preference for="DanielNavarro\ChatGptReviewValidator\Api\Data\ReviewInterface" type="DanielNavarro\ChatGptReviewValidator\Model\Review" />

    <!-- LOG dn_gpt_review (definition) -->
    <virtualType name="DanielNavarro\ChatGptReviewValidator\Logger\Handler" type="Magento\Framework\Logger\Handler\Base">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
            <argument name="fileName" xsi:type="string">/var/log/dn_gpt_review.log</argument>
        </arguments>
    </virtualType>
    <virtualType name="DanielNavarro\ChatGptReviewValidator\Logger\Logger" type="DanielNavarro\Logger\Model\Logger">
        <arguments>
            <argument name="name" xsi:type="string">dn_gpt_review_logger</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">DanielNavarro\ChatGptReviewValidator\Logger\Handler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- LOG dn_gpt_review (usages) -->
    <type name="DanielNavarro\ChatGptReviewValidator\Cron\Validate">
        <arguments>
            <argument name="logger" xsi:type="object">DanielNavarro\ChatGptReviewValidator\Logger\Logger</argument>
        </arguments>
    </type>
    <type name="DanielNavarro\ChatGptReviewValidator\Model\Validator">
        <arguments>
            <argument name="logger" xsi:type="object">DanielNavarro\ChatGptReviewValidator\Logger\Logger</argument>
        </arguments>
    </type>

</config>
